.add-task {
    position: relative;
    width:100%;
}

.add-task__btn {
    margin: 40px auto;
    width: 240px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #4495cc;
    color: #fff;
    font-weight: bold;
    border-radius: 4px;
    cursor: pointer;
}

.add-task-list {
    width: 320px;
    margin: 0 auto;
}

.add-task-list__item {
    display: flex;
    margin: 5px 0;
    justify-content: center;
    color: var(--textBlack);
    font-weight: bold;
}

.add-task-list__name {
    margin-right: 5px;
}